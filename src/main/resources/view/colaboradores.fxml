                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <children>
                                <TextField promptText="Buscar colaborador..." style="-fx-background-color: #3d3d3d; -fx-text-fill: white; -fx-prompt-text-fill: #909090; -fx-background-radius: 8; -fx-border-color: #505050; -fx-border-radius: 8; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                                
