                                <TextField fx:id="txtApellidoMaterno" promptText="Apellido Materno" style="-fx-background-color: #3d3d3d; -fx-text-fill: white; -fx-prompt-text-fill: #909090; -fx-background-radius: 8; -fx-border-color: #505050; -fx-border-radius: 8; -fx-font-size: 14px; -fx-padding: 10;"/>
                            </children>
                        </VBox>

                        <HBox spacing="10">
                            <children>
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Usuario" style="-fx-text-fill: #c0c0c0; -fx-font-weight: bold;"/>
                                        <TextField fx:id="txtUsuario" promptText="Usuario" style="-fx-background-color: #3d3d3d; -fx-text-fill: white; -fx-prompt-text-fill: #909090; -fx-background-radius: 8; -fx-border-color: #505050; -fx-border-radius: 8; -fx-font-size: 14px; -fx-padding: 10;"/>
                                    </children>
                                </VBox>
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Clave" style="-fx-text-fill: #c0c0c0; -fx-font-weight: bold;"/>
                                        <PasswordField fx:id="txtClave" promptText="Clave" style="-fx-background-color: #3d3d3d; -fx-text-fill: white; -fx-prompt-text-fill: #909090; -fx-background-radius: 8; -fx-border-color: #505050; -fx-border-radius: 8; -fx-font-size: 14px; -fx-padding: 10;"/>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <VBox spacing="5">
                            <children>
                                <Label text="Perfil" style="-fx-text-fill: #c0c0c0; -fx-font-weight: bold;"/>
                                <ComboBox fx:id="cbPerfil" maxWidth="1.7976931348623157E308" promptText="Perfil" style="-fx-background-color: #3d3d3d; -fx-text-fill: white; -fx-prompt-text-fill: #909090; -fx-background-radius: 8; -fx-border-color: #505050; -fx-border-radius: 8; -fx-font-size: 14px; -fx-padding: 5;"/>
                            </children>
                        </VBox>
                        
                        <VBox alignment="CENTER" spacing="10">
                            <children>
                                <Button fx:id="btnGuardar" maxWidth="1.7976931348623157E308" onAction="#guardarColaborador" style="-fx-background-color: #F2C94C; -fx-text-fill: #2D2D2D; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-cursor: hand;" text="Guardar Usuario" />
                                
                                <HBox alignment="CENTER" spacing="10">
                                    <children>
                                        <Button fx:id="btnModificar" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#modificarColaborador" style="-fx-background-color: #404040; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 8 15; -fx-cursor: hand;" text="Modificar" HBox.hgrow="ALWAYS" />
