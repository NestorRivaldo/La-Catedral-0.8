                        <Label text="Registrar Colaborador" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;" />
                        
                        <HBox spacing="10">
                            <children>
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Nombres" style="-fx-text-fill: #c0c0c0; -fx-font-weight: bold;"/>
                                        <TextField fx:id="txtNombres" promptText="Nombres" style="-fx-background-color: #3d3d3d; -fx-text-fill: white; -fx-prompt-text-fill: #909090; -fx-background-radius: 8; -fx-border-color: #505050; -fx-border-radius: 8; -fx-font-size: 14px; -fx-padding: 10;"/>
                                    </children>
                                </VBox>
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Apellido Paterno" style="-fx-text-fill: #c0c0c0; -fx-font-weight: bold;"/>
                                        <TextField fx:id="txtApellidoPaterno" promptText="Apellido Paterno" style="-fx-background-color: #3d3d3d; -fx-text-fill: white; -fx-prompt-text-fill: #909090; -fx-background-radius: 8; -fx-border-color: #505050; -fx-border-radius: 8; -fx-font-size: 14px; -fx-padding: 10;"/>
