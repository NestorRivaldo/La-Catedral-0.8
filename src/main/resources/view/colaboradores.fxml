                                <TableColumn fx:id="colApellidos" prefWidth="150.0" text="Apellidos" />
                                <TableColumn fx:id="colUsuario" prefWidth="100.0" text="Usuario" />
                                <TableColumn fx:id="colPerfil" prefWidth="100.0" text="Perfil" />
                                <TableColumn fx:id="colEstado" prefWidth="80.0" text="Estado" />
                            </columns>
