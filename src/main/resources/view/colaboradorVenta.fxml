<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #1d1d1f;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pe.edu.upeu.sysventas.controller.ColaboradorVentaController">
   <children>
      <VBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <Label text="Punto de Venta - La Catedral" textFill="WHITE" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                     <children>
                        <Button mnemonicParsing="false" onAction="#cerrarSesion" style="-fx-background-color: #FF3B30; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 8 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 10, 0, 0, 4);" text="Cerrar Sesión" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            
            <HBox spacing="10.0" style="-fx-background-color: #2d2d2d; -fx-padding: 10; -fx-background-radius: 12;">
               <children>
                  <TextField fx:id="txtBuscarProducto" promptText="Buscar producto por nombre o código..." style="-fx-background-color: #3d3d3d; -fx-text-fill: white; -fx-prompt-text-fill: #909090; -fx-background-radius: 8; -fx-border-color: #505050; -fx-border-radius: 8; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnBuscar" mnemonicParsing="false" onAction="#buscarProducto" style="-fx-background-color: #F2C94C; -fx-text-fill: #2D2D2D; -fx-background-radius: 8; -fx-font-weight: bold; -fx-padding: 10 20; -fx-cursor: hand;" text="Buscar" />
               </children>
               <effect>
                  <DropShadow color="#00000040" radius="10.0" />
               </effect>
            </HBox>
            
            <HBox spacing="20.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox spacing="10.0" style="-fx-background-color: #2d2d2d; -fx-padding: 15; -fx-background-radius: 12;" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Productos Disponibles" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <TableView fx:id="tblProductos" style="-fx-background-color: #2d2d2d; -fx-border-color: transparent; -fx-background-radius: 12;" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="colNombre" prefWidth="150.0" text="Producto" />
                            <TableColumn fx:id="colPrecio" prefWidth="75.0" text="Precio" />
                            <TableColumn fx:id="colStock" prefWidth="75.0" text="Stock" />
                            <TableColumn fx:id="colCategoria" prefWidth="100.0" text="Categoría" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                           <effect>
                              <DropShadow color="#00000026" radius="10.0" />
                           </effect>
                        </TableView>
                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#agregarAlCarrito" style="-fx-background-color: #007AFF; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 12; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,122,255,0.4), 10, 0, 0, 4);" text="Agregar al Carrito ➔" />
                     </children>
                  </VBox>

                  <VBox spacing="10.0" style="-fx-background-color: #2d2d2d; -fx-padding: 15; -fx-background-radius: 12;" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Carrito de Compras" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <TableView fx:id="tblCarrito" style="-fx-background-color: #2d2d2d; -fx-border-color: transparent; -fx-background-radius: 12;" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="colCarProducto" prefWidth="150.0" text="Producto" />
                            <TableColumn fx:id="colCarCantidad" prefWidth="75.0" text="Cant." />
                              <TableColumn fx:id="colCarPrecio" prefWidth="75.0" text="P. Unit." />
                              <TableColumn fx:id="colCarSubtotal" prefWidth="75.0" text="Subtotal" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                           <effect>
                              <DropShadow color="#00000026" radius="10.0" />
                           </effect>
                        </TableView>
                        
                        <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-background-color: #3d3d3d; -fx-padding: 15; -fx-background-radius: 12;">
                           <children>
                              <Label text="Total a Pagar:" textFill="#a0a0a0">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Label>
                              <Label fx:id="lblTotal" text="S/. 0.00" textFill="#34C759">
                                 <font>
                                    <Font name="System Bold" size="24.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            
            <HBox alignment="CENTER_RIGHT" spacing="15.0">
               <children>
                  <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#cancelar" style="-fx-background-color: #FF453A; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 12 25; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(255,69,58,0.4), 10, 0, 0, 4);" text="Cancelar Venta" />
                  <Button fx:id="btnRealizarVenta" mnemonicParsing="false" onAction="#realizarVenta" style="-fx-background-color: #34C759; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 12 25; -fx-font-size: 16px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(52,199,89,0.4), 10, 0, 0, 4);" text="Realizar Venta" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>